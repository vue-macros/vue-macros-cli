{
  "compilerOptions": {
    "target": "es2022",
    "jsx": "preserve",
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": [
      "node",
      "unplugin-vue-macros/macros-global"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "vueCompilerOptions": {
    "plugins": [
      "@vue-macros/volar/jsx-directive",
      "@vue-macros/volar/export-render"
    ]
  },
  "include": ["src", "test"]
}
