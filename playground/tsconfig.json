{
  "compilerOptions": {
    "target": "es2022",
    "jsx": "preserve",
    "lib": [
      "es2022"
    ],
    "module": "es2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": [
      "node",
      "vue-macros/macros-global"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "vueCompilerOptions": {
    "plugins": [
      "@vue-macros/volar/define-render",
      "@vue-macros/volar/export-render",
      "@vue-macros/volar/jsx-directive"
    ]
  }
}
